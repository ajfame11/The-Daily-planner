<%= form_for(@task, url: user_task_path(@user)) do |f| %>
    
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    
    <%= f.label :description %><br>
    <%= f.text_field :description %><br><br>
    
    <%= f.label :category %><br>
    <%= f.collection_select :category_id, Category.all, :id, :name %><br><br>
    
    <%= f.submit "Submit" %>
<% end %>