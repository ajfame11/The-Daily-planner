<%= form_for(@task, url: user_tasks_path(@user)) do |f| %>
    <%= f.label :url %><br>
    <%= f.text_field :url %><br>

    <%= f.label :title %><br>
    <%= f.text_field :title %><br>

    <%= f.label :description %><br>
    <%= f.text_field :description %><br><br>

    <%= f.label :category %><br>
    <%= f.collection_select :category_id, Category.all, :id, :category_name %><br><br>

    <%= f.submit "Submit" %>
<% end %>