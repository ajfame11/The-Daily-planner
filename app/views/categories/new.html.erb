<%= render 'layouts/loggedin_links' %><br><br>

<%= form_with(model: @category, url: categories_path, local: true) do |f| %>
    <% if @category.errors.any? %>
        <% @category.errors.full_messages.each do |message| %>
            <div style='color: red;'>
                <%= message %>
            </div>
        <% end %>
    <% end %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br><br>
    <%= f.submit "Submit" %>
<% end %>